# SOPS Secrets Template
# 1. Copy to secrets.yaml.work
# 2. Fill in your values
# 3. Run ./encrypt

# Generate with: mkpasswd -m SHA-512
user_hashedPassword: "$6$..."

# WireGuard config from VPN provider (Mullvad, AirVPN, etc.)
vpn_wgConf: |
    [Interface]
    PrivateKey = ...
    Address = ...
    [Peer]
    PublicKey = ...
    Endpoint = ...
    AllowedIPs = 0.0.0.0/0

services_transmission_credentials: '{"rpc-password": "your_password"}'
services_caddy_cloudflareToken: "CLOUDFLARE_API_TOKEN=your_token_here"
